{
    "compilerOptions": {
      "target": "es6",
      "allowJs": true,
      "lib": ["dom", "es2015", "es2017", "es6"],
      "jsx": "react",
      "module": "ES6",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*.ts", "src/*.ts", "src/**/*.test.ts"],
    "exclude": ["node_modules", "dist"]
}